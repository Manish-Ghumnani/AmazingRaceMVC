@model Models.Staff

@{
    ViewBag.Title = "Staff";
    Layout = "~/Views/Shared/_StaffMenu.cshtml";
}

<!DOCTYPE html>


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.13/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="~/Content/themes/base/jquery-ui.min.css" />

    <div style="width:90%; margin:auto" class="tablecontainer">
        <!-- Trigger the modal with a button -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Add New Staff</button>

        <table id="staff_table">
            <thead>
                <tr>
                    <th>Staff Name</th>
                    <th>Staff Location</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
        </table>
        
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog" style="left : 0%">
            
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Save Staff</h4>
                </div>
                <div class="modal-body">

                        <form method="post" id="PopupSaveForm" >
                            @Html.HiddenFor(a => a.ID, new { Id = "staffId" })
                            <div class="form-group">
                                <label>Staff Name</label>
                                @Html.TextBoxFor(a => a.Name, new { @class = "form-control", Id= "Name" })
                                @Html.ValidationMessageFor(a => a.Name)
                            </div>

                            <div class="form-group">
                                <label>Staff Location</label>
                                @Html.TextBoxFor(a => a.Location, new { @class = "form-control", Id= "Location" })
                                @Html.ValidationMessageFor(a => a.Location)
                            </div>

                            <div>
                                <button type="submit" value="save" class="btn btn-success">Save</button>
                            </div>
                        </form>                        
                </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                </div>
            </div>
        </div>
</div>

@*delete modal*@
<div class="modal fade" id="myDeleteModal" role="dialog">
    <div class="modal-dialog" style="left : 0%">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete Staff</h4>
            </div>
            <div class="modal-body">
                <div id="successDiv" class="alert alert-success hidden"></div>
                <div id="failDiv" class="alert alert-danger hidden"></div>
                <input type="hidden" id="staffId" />
                <span>Are you sure want to delete this Staff?</span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" id="deletePopupBtn" class="btn btn-danger" data-dismiss="modal">Delete</button>
            </div>
        </div>
    </div>
</div>

